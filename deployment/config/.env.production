# Production Environment Configuration
# VCP ML Platform
# Generated: 2025-11-14

ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Database Paths
DATABASE_PATH=/app/data/vcp_trading_local.db
MODEL_REGISTRY_PATH=/app/data/models/registry/model_registry.db

# Feature Database Paths
PRICE_DB=/app/data/price_movements.db
TECHNICAL_DB=/app/data/features/technical_features.db
FINANCIAL_DB=/app/data/features/financial_data.db
FINANCIAL_FEATURES_DB=/app/data/features/financial_features.db
NEWS_DB=/app/data/features/news_sentiment.db
SENTIMENT_DB=/app/data/features/sentiment_features.db
HISTORICAL_DB=/app/data/features/historical_patterns.db
SEASONALITY_DB=/app/data/features/seasonality_features.db

# API Configuration
ENABLE_MONITORING=true
ENABLE_CORS=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Performance
WORKERS=4
TIMEOUT=60

# Prometheus
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Alerting (configure before production deployment)
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/HERE
ALERT_EMAIL=ops@yourcompany.com

# Deployment
CONTAINER_NAME=vcp-ml-production
IMAGE_TAG=vcp-ml:production
